pkgname=jwt-cli
pkgver=3.1.0
pkgrel=1
pkgdesc="A super fast CLI tool to decode and encode JWTs built in Rust "
url="https://github.com/mike-engel/jwt-cli"
license=('MIT')
arch=('x86_64')

source=("jwt-cli-$pkgver-linux.tar.gz::https://github.com/mike-engel/jwt-cli/releases/download/$pkgver/jwt-cli-$pkgver-linux.tar.gz")
