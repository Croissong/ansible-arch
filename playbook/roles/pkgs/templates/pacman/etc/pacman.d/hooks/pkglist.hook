[Trigger]
Operation = Install
Operation = Remove
Type = Package
Target = *

[Action]
When = PostTransaction
Exec = /usr/bin/sudo -u {{ user.name }} /bin/bash -c 'PACMAN_CONFDIR=$HOME/.config/pacman; /usr/bin/pacman -Qqetn > $PACMAN_CONFDIR/pkgs.txt; comm -13 <(pacman -Qqdt | sort) <(pacman -Qqdtt | sort) > $PACMAN_CONFDIR/opt-pkgs.txt; pacman -Qqetm > $PACMAN_CONFDIR/aur-pkgs.txt'
